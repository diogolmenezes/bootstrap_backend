{
    "app": {
        "name": "Minha Aplicação",
        "baseRoute": "/minha-aplicacao",
        "port": 3000
    },
    "db": {
        "url": "mongodb://localhost:27017/minha-aplicacao",
        "options": {
            "useMongoClient": true,
            "poolSize": 10
        }
    },
    "log": {
        "debug": false,
        "bunyan": {
            "name": "Application",
            "streams": [
                {
                    "level": "debug",
                    "type": "rotating-file",
                    "path": "log/{hostname}.log",
                    "period": "1d",
                    "count": 3
                }
            ]
        }
    },
    "authentication": {
        "enabled": "true",
        "scheme": "Basic",
        "jwt": {
            "secret": "49b4e2f9-ec31-4758-bae5-741a80e0e8de",
            "expiresIn": "1h"
        }
    },
    "audit": {
        "enabled": true,
        "printLog": true,
        "bunyan": {
            "name": "Audit",
            "streams": [
                {
                    "level": "debug",
                    "type": "rotating-file",
                    "path": "log/audit.log",
                    "period": "1d",
                    "count": 3
                }
            ]
        }
    },
    "origin": {
        "require": {
            "application": true,
            "channel": true,
            "device": true
        }
    }
}